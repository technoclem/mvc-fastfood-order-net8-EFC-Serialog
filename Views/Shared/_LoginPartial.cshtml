@model LoginCredential

<partial name="_Notification" />
<partial name="_ValidationScriptsPartial"></partial>
@{
    string userType = "Customer";
}
@if (ViewData["Title"]?.ToString() == "Customer Login")
{
    <partial name="_BreadcrumbPartial" model='@new Breadcrumb("Customer Login", "fa-key")' />
   
}
else if (ViewData["Title"]?.ToString() == "Admin Login")
{
<partial name="_BreadcrumbPartial" model='@new Breadcrumb("Admin Login", "fa-key")' />
    userType = "Admin";
}
<section class="log-in-section background-image-2 section-b-space">
    <div class="container-fluid-lg w-100">
        <div class="row">
            <div class="col-xxl-6 col-xl-5 col-lg-6 d-lg-block d-none ms-auto">
                <div class="image-contain">
                    <img src="~/assets/images/log-in.png" class="img-fluid" alt="">
                </div>
            </div>

            <div class="col-xxl-4 col-xl-5 col-lg-6 col-sm-8 mx-auto">
                <div class="log-in-box">
                    <div class="log-in-title">
                        <h3>Welcome To FastFood</h3>
                        <h4>@userType Login Page</h4>
                    </div>
                    @{
                        string actionMethod = "Login";
                        if (userType == "Admin") actionMethod = "AdminLogin";
                    }

                    <form class="input-box" method="post" asp-action="@actionMethod">
                        <div class="row g-4">
                            <div class="col-12">
                                <div class="form-floating theme-form-floating log-in-form">
                                    <input asp-for="Email" class="form-control text-lowercase" autocomplete="off">
                                    <label asp-for="Email"></label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-floating theme-form-floating log-in-form">
                                    <input asp-for="Password" class="form-control">
                                    <label asp-for="Password"></label>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="forgot-box">
                                    <div class="form-check ps-0 m-0 remember-box">
                                    </div>
                                    <a asp-action="ForgotPassword" asp-route-user="@userType" class="forgot-password">Forgot Password?</a>
                                </div>
                            </div>

                            <div class="col-12">
                                <button class="btn btn-animation w-100 justify-content-center" type="submit">
                                    Log In
                                </button>
                            </div>
                        </div>
                    </form>
                    <div class="other-log-in">
                        <h6></h6>
                    </div>
                    @if (userType == "Customer")
                    {
                        <div class="sign-up-box">
                            <h4>Don't have an account?</h4>
                            <a asp-action="SignUp">Sign Up</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
