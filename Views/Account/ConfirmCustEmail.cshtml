@{
    ViewData["Title"] = "Confirm Customer Email";
}

<partial name="_Notification" />
<partial name="_BreadcrumbPartial" model='@new Breadcrumb("Confirm Account", "fa-badge-check")' />

<section class="log-in-section background-image-2 section-b-space">
    <div class="container-fluid-lg w-100">
        <div class="row">

            <div class="col-xxl-10 col-xl-11 col-lg-12 col-sm-12 mx-auto">
                <div class="log-in-box">
                    <div class="log-in-title">
                        <h3>Welcome To FastFood</h3>
                        <h4>
                            @if (TempData["success"] != null)
                            {
                                <i class="fa fa-check text-success"></i>
                                @TempData["success"] <br />
                                <a asp-action="Login">Click Here to login to your account</a>
                            }
                            else if (TempData["error"] != null)
                            {
                                <i class="fa fa-cancel text-danger"></i>
                                @TempData["error"]
                            }
                        </h4>
                    </div>

                    <br /><br />
                    <div class="other-log-in">
                        <h6></h6>
                    </div>
                    <div class="sign-up-box">
                        <h4>Don't have an account?</h4>
                        <a asp-action="SignUp">Sign Up</a>
                    </div>

                    <div class="sign-up-box">
                        <h4>Have account?</h4>
                        <a asp-action="Login">Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>