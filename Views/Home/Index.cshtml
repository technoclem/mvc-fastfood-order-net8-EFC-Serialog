@model IEnumerable<FastFoodEFC.Dto.RecentItem>
@{
    ViewData["Title"] = "Home Page";
}

<partial name="_Notification" />

<section class="home-section pt-2">
    <div class="container-fluid-lg">
        <div class="row g-4">
            <div class="col-xl-8 ratio_65">
                <div class="home-contain h-100">
                    <div class="h-100">
                        <img src="assets/images/vegetable/banner/1.jpg" class="bg-img blur-up lazyload" alt="">
                    </div>
                    <div class="home-detail p-center-left w-75">
                        <div>
                            <h6>Exclusive offer <span>30% Off</span></h6>
                            <h1 class="text-uppercase">
                                Stay home & delivered your <span class="daily">
                                    Daily
                                    Needs
                                </span>
                            </h1>
                            <p class="w-75 d-none d-sm-block">
                                Vegetables contain many vitamins and minerals that are
                                good for your health. 
                            </p>
                            <button onclick="location.href = '/Home/Shop';"
                                    class="btn btn-animation mt-xxl-4 mt-2 home-button mend-auto">
                                Shop Now <i class="fa-solid fa-right-long icon"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-4 ratio_65">
                <div class="row g-4">
                    <div class="col-xl-12 col-md-6">
                        <div class="home-contain">
                            <img src="assets/images/vegetable/banner/2.jpg" class="bg-img blur-up lazyload"
                                 alt="">
                            <div class="home-detail p-center-left home-p-sm w-75">
                                <div>
                                    <h2 class="mt-0 text-danger">
                                        45% <span class="discount text-title">OFF</span>
                                    </h2>
                                    <h3 class="theme-color">Nut Collection</h3>
                                    <p class="w-75">We deliver organic vegetables & fruits</p>
                                    <a asp-action="Shop" class="shop-button">
                                        Shop Now <i class="fa-solid fa-right-long"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-12 col-md-6">
                        <div class="home-contain">
                            <img src="assets/images/vegetable/banner/3.jpg" class="bg-img blur-up lazyload"
                                 alt="">
                            <div class="home-detail p-center-left home-p-sm w-75">
                                <div>
                                    <h3 class="mt-0 theme-color fw-bold">Healthy Food</h3>
                                    <h4 class="text-danger">Organic Market</h4>
                                    <p class="organic">Start your daily shopping with some Organic food</p>
                                    <a asp-action="Shop" class="shop-button">
                                        Shop Now <i class="fa-solid fa-right-long"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



<section class="product-section">
    <div class="container-fluid-lg">
        <div class="title">
            <h2>RECENTLY ADDED ITEM</h2>
            <span class="title-leaf">
                <svg class="icon-width">
                    <use xlink:href="assets/svg/leaf.svg#leaf"></use>
                </svg>
            </span>
            <p>
                @if (Model != null)
                {
                    <span>Here are the recent food product items added for you</span>
                }
                else
                {
                    <span>Recently, no product items have been added.</span>
                }
            </p>
        </div>
        <div class="product-border border-row">
            <div class="slider-6_2 no-arrow">                            

                @if (Model != null)
                {
                    @foreach (var r in Model)
                    {
                        <div class='product-box wow fadeIn'>
                            <div class='product-image'>
                                <a asp-controller="Home" asp-action="ProductDetails" asp-route-id="@r.FoodId">
                                    <img src='@Url.Content($"~/FoodImage/{r.FoodId}.jpg")' 
                                    class='img-fluid blur-up lazyload' alt='' />
                                </a>
                            </div>
                            <div class='product-detail'>
                                <a asp-controller="Home" asp-action="ProductDetails" asp-route-id="@r.FoodId">
                                    <h6 class='name name-2 h-100'>@r.FoodName.CapitalizeEachWord()</h6>
                                </a>
                                <h6 class='sold weight text-content fw-normal'><br /></h6>
                                <div class='counter-box'>
                                    <h6 class='sold theme-color'>&pound;@r.Price</h6>
                                    <div class='addtocart_btn'>
                                        <a asp-controller="Home" asp-action="ProductDetails" asp-route-id="@r.FoodId"
                                           class='add-button addcart-button btn buy-button text-light'>
                                            <span>Add</span> <i class='fa-solid fa-plus'></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }

            </div>
        </div>
    </div>
</section>
